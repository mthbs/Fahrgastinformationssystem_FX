<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="de.fis.controllers.verwaltung.hinzufuegen.routeZuordnung.ZuordnungBestaetigenController">
    <MenuBar fx:id="menubar" prefHeight="25.0" prefWidth="800.0" style="visibility: true;" AnchorPane.bottomAnchor="775.0"
             AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Menu fx:id="main_menu" mnemonicParsing="false" text="Szene">
            <MenuItem mnemonicParsing="false" onAction="#oeffneBahnhofsanzeige" text="Bahnhofsanzeige"/>
            <MenuItem mnemonicParsing="false" onAction="#oeffneVideoplayer" text="Videoplayer"/>
            <MenuItem mnemonicParsing="false" onAction="#oeffneFahrtenhinzufuegen" text="Neue Fahrten hinzufügen"/>
            <MenuItem mnemonicParsing="false" onAction="#oeffneFahrtenloeschen" text="Fahrten verwalten"/>
        </Menu>
    </MenuBar>
    <VBox maxHeight="700.0" maxWidth="700.0" minHeight="700.0" minWidth="700.0" prefHeight="700.0" prefWidth="700.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
        <VBox alignment="TOP_CENTER" prefWidth="100.0">
            <Label alignment="CENTER" prefWidth="700.0" text="Möchten Sie wirklich die neue Route-Ziel-Zuordnung der Datenbank hinzufügen?"
                   textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <HBox prefHeight="50.0" prefWidth="200.0">
                <padding>
                    <Insets top="15.0"/>
                </padding>
                <Label prefWidth="150.0" text="Route_Id:">
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="lbl_routeId" prefWidth="90.0" text="lbl_routeId">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
                <padding>
                    <Insets top="15.0"/>
                </padding>
                <Label prefWidth="150.0" text="Zielbahnhof:">
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="lbl_zielbf" prefWidth="90.0" text="lbl_zielbf">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
                <padding>
                    <Insets top="15.0"/>
                </padding>
                <Label prefWidth="150.0" text="Route:">
                    <padding>
                        <Insets left="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label prefWidth="300.0" text="Inhalt folgt später">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <Button fx:id="btn_confirm" mnemonicParsing="false" onAction="#btn_confirmTapped" prefHeight="30.0" prefWidth="80.0"
                    text="Bestätigen">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btn_cancel" mnemonicParsing="false" onAction="#btn_cancelTapped" prefHeight="30.0" prefWidth="80.0"
                    text="Abbrechen">
                <HBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
    <Label fx:id="lbl_signature" alignment="BOTTOM_LEFT" text="Copyright=Maxim Neumann" textAlignment="RIGHT" AnchorPane.bottomAnchor="0.0"
           AnchorPane.rightAnchor="0.0">
        <font>
            <Font size="8.0"/>
        </font>
    </Label>
</AnchorPane>
